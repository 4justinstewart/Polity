<h1>Listing wards</h1>

<table>
  <thead>
    <tr>
      <th>Ward number</th>
      <th>Term start</th>
      <th>Term end</th>
      <th>Legislator</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wards.each do |ward| %>
      <tr>
        <td><%= ward.ward_number %></td>
        <td><%= ward.term_start %></td>
        <td><%= ward.term_end %></td>
        <td><%= ward.legislator %></td>
        <td><%= link_to 'Show', ward %></td>
        <td><%= link_to 'Edit', edit_ward_path(ward) %></td>
        <td><%= link_to 'Destroy', ward, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

