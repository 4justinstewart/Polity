<section>
	<p id="notice"><%= notice %></p>

	<div>
		<h2>Ward <%= @ward.ward_number %> Community</h2>
	</div>
	<% if current_user.ward.ward_number == @ward.ward_number %>
	<div>
		<%=link_to "Add A Meeting", new_community_meeting_path %>
	</div>
	<% end %>
	<div class="meetings">
		<h3>Community Meetings</h3>
		<table>
			<th> Where </th>
			<th> When </th>
			<th> Topic </th>
			<th> Meeting Leader </th>
			<% @community_meetings.each do |meeting| %>
			<tr>
				<td> <%= meeting.address %> </td>
				<td> <%= meeting.time_at %> </td>
				<td> <%= meeting.topic %> </td>
				<td> <%= meeting.creator.name %> </td>
			</tr>
			<% end %>
		</table>
	</div>

	<div class="map">
		Hey guess what goes here! A map! A map goes here, man
	</div>


	<div class="alderman-votes">
		<h2>Ward <%= @ward.ward_number %></h2>
		<h3>Alderman <%= @ward.alderman.last_name %>'s Recent Votes</h3>
		<table>
			<th> Issue </th>
			<th> Alderman <span class="capitalize"><%= @ward.alderman.last_name %></span>'s Vote </th>
			<th> Support </th>
			<% @legislator_votes.each do |vote| %>
			<tr>
				<td> <%= vote.legislation.title %> </td>
				<td>
					<% if vote.vote == "Y" %>
						Pass
					<% else %>
						Do Not Pass
					<% end %>
				</td>
				<td>
					<div class="bar-graph-indication">
						<span class="meter ward-legislation-support" style="width:<%= vote.ward_support_percent(@ward.id) %>%">
							<p><%= vote.ward_support_percent(@ward.id) %></p>
						</span>
						<span class = "meter ward-legislation-opposition" style="width: <%= vote.ward_opposition_percent(@ward.id) %>%">
							<p><%= vote.ward_opposition_percent(@ward.id) %></p>
						</span>
					</div>
				</td>
			</tr>
			<% end %>
		</table>
	</div>
</section>
