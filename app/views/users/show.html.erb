<section>
    <div class="user_profile">

        <h3><%= @user.name %></h3>
        <div>
            <%= image_tag @user.img_url %> <!-- Or just an image of something?-->
        </div>
        <div>
            <h5 class="address">Your Address in Ward <%= @user.ward_number %></h5>
                <ul>
                    <li><%= @user.street_address1.titleize %></li>
                    <li>Chicago, IL</li>
                    <li><%= @user.zip %></li>
                </ul>
            <div>Recently move? Update <%= link_to "your information", edit_user_path(@user) %> and connect with your new alderman.</div>
        </div>
    </div>
    <div class="user_alderman">
        <div>
            <%= image_tag @alderman.img_url %>
        </div>
        <div class="alderman_description">
            <h3>Alderman <%= @user.alderman.name %></h3>
            <ul>
                <li><%= @ward.address1.titleize %></li>
                <li>Chicago, IL</li>
                <li><%= @ward.zip %></li>
            </ul>
            <h4><%= @ward.phone_number %></h4>
        </div>
        <div>
            <h2>GET IN TOUCH WITH YOUR ALDERMAN NOW</h2>
            <%= mail_to @alderman_email, "Send a Quick Message", subject: "CONSTITUENT FEEDBACK from #{current_user.name}", body: "Hi Alderman #{@alderman.name}, \n\n\n\n I look forward to your response,\n\n#{current_user.name}" %>

            <%= link_to "Tweet at your alderman", "https://twitter.com/intent/tweet?text=#{@alderman.twitter_handle}", :target => "_blank" %>

            <!-- SET UP THE TWILIO AND TWITTER API HERE -->
            <%= button_to "Call #{@alderman.name} Now", twilio_call_path, :params => { alderman_phone: "#{@ward.phone_number}" } %>

        </div>
    </div>

</section>

</section>
    <div class="voice_up">
        <%= link_to "Give Your Feedback on Legislation", legislations_path %>
    </div>
    <div>
        <%= link_to "More about your Legislator", legislator_path(@alderman) %>
    </div>
    <div>
        <%= link_to "See What's Happening in Your Ward...", ward_path(@ward) %>
    </div>
</section>



<section>
    <div class="vote-feedback">
      <% if current_user && current_user.ward.id == @legislator.represented_ward_id %>

        <div>
          <%= link_to "I agree!", legislation_voices_up_path(@user_feedback.id), method: "post", id: "vote-up"%>
        </div>
        <div>
          <%= @user_feedback.title %><br>
          Your Alderman voted <%= @legislator.issue_vote(@user_feedback) %>
        </div>
        <div>
          <%= link_to "I disagree!", legislation_voices_down_path(@user_feedback.id), method: "post", id: "vote-down" %>
        </div>
          <%= link_to "Leave detailed feedback", new_legislation_voice_path(legislation: @user_feedback.id) %>
      <% else %>
        You must live in this ward to leave feedback!
      <% end %>
    </div>






