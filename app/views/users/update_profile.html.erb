<h2>Tell Us More about You?</h2>

<%= form_for :user, url: edit_user_registration_path, method: :patch do |f| %>
  <div><%= f.label :first_name %><br />
  <%= f.text_field :first_name, autofocus: true %></div>

  <div><%= f.label :last_name %><br />
  <%= f.text_field :last_name %></div>

  <div><h4>Home Address:</h4>
      <ul>
        <%= f.fields_for :user_addresses do |addresses_form| %>
          <li>

            <div>
                <%= addresses_form.label :address1 %><br />
                <%= addresses_form.text_field :address1 %>
            </div>

            <div>
                <%= addresses_form.label :address2 %><br />
                <%= addresses_form.text_field :address2 %>
            </div>

            <div>
                <%= addresses_form.label :zip %><br />
                <%= addresses_form.text_field :zip %>
            </div>

          </li>
        <% end %>
      </ul>
  </div>

  <div><%= f.submit "Finish Sign Up" %></div>
<% end %>

